#!/usr/bin/bash
PATH=~/Sync/bin/x86_64/:$PATH
cd ~/Sync/OBS/memes || exit
if [ "$XDG_SESSION_TYPE" = "wayland" ]; then
	CMD=wofi
	DM="--dmenu"
else
	CMD=rofi
	DM="-dmenu"
fi
chosen=$( (
	echo "Blank"
	obs-cli scene list | sed -e 's/^/ðŸŽ¥ /g'
	ls
) | $CMD $DM -i -no-custom)
[ -z "$chosen" ] && exit
if [[ ${chosen::1} == "ðŸŽ¥" ]]; then
	if [[ ${chosen:2:4} == "Text" ]]; then
		TEXT=$(echo "" | $CMD $DM -p "Enter Text for OBS" -theme-str 'listview { enabled: false;}')
		if [ "$TEXT" ]; then
			obs-cli label text "Overlay Text" "$TEXT"
			obs-cli scene switch Text
		else
			obs-cli scene switch Camera
		fi

	else
		obs-cli scene switch "${chosen:2}"
	fi
	exit
fi
obs-cli scene switch "Camera"
rm ~/Sync/OBS/memes/quickshow.gif 2>/dev/null
ln -s "$chosen" quickshow.gif 2>/dev/null
[ "$chosen" = "Blank" ] && exit
sleep 1
obs-cli scene switch "Image"
